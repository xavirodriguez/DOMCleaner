{
  "manifest_version": 2,
  "name": "DOMCleaner",
  "description": "Remove elements from pages",
  "version": "0.0.1",
  "permissions": ["activeTab", "tabs"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"],
      "css": ["styles.css"]
    }
  ],
  "browser_action": {
    "default_icon": { "64": "icons/icon-black.svg" },
    "default_title": "Activar eliminador"
  }
}
